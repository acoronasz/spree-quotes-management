<% if spree_current_user && !::SpreeQuotesManagement::Config[:disable_quote?] %>

  <div class='quotes-carousel'>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <% @top_quotes.each_with_index do |slide, index| %>
          <li data-target="#carousel-prod" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
        <% end %>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <% @top_quotes.each_with_index do |quote, index| %>
          <div class="item <%= index == 0 ? 'active' : '' %>">
            <center>
              <div class="body-carousel">
                <%= quote.description %><br>
                <div class='pull-right'>-by <i><%= present(quote).author_name %></i></div>
              </div>
            </center>
          </div>
        <% end %>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

  </div>
  <%= stylesheet_link_tag 'spree/frontend/quotes/carousel' %>

  <div id='user_quotes_new_form'><%= render partial: 'spree/quotes/form', locals: { quote: @quote } %></div>
<% end %>
